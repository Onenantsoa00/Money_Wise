<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Couleur de fond -->
    <solid android:color="#D1D1D1"/>

    <!-- Bordures arrondies -->
    <corners android:radius="12dp"/>

    <!-- Ombre légère -->
    <stroke
        android:width="1dp"
        android:color="#22000000"/>

    <!-- Ombre portée (pour versions pré-Lollipop) -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"/>
</shape>