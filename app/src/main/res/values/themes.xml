<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoneyWise" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnBackground">@color/light_text_primary</item>
        <item name="colorOnSurface">@color/light_text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Attributs personnalisÃ©s -->
        <item name="cardBackgroundColor">@color/light_card_background</item>
        <item name="textColorPrimary">@color/light_text_primary</item>
        <item name="textColorSecondary">@color/light_text_secondary</item>
        <item name="dividerColor">@color/light_divider</item>
        <item name="backgroundColorPrimary">@color/light_background</item>
    </style>

    <style name="Theme.MoneyWise.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MoneyWise.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MoneyWise.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>