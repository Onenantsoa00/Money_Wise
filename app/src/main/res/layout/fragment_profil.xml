<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.moneywise.ui.profile.ProfilViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA">

        <!-- Header courbe avec effet de vague -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/style_profile" />

            <!-- Overlay pour ajouter un dégradé subtil -->
            <View
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/header_gradient_overlay" />
        </FrameLayout>

        <!-- Contenu principal -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Espace pour aligner avec l'image de profil -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="160dp" />

                <!-- Carte de profil -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="-60dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="16dp">

                        <!-- Espace pour l'image de profil -->
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="60dp" />

                        <!-- Nom et email -->
                        <TextView
                            android:id="@+id/profileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.text}"
                            android:textSize="22sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp" />

                        <TextView
                            android:id="@+id/profileEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.balance}"
                            android:textSize="16sp"
                            android:textColor="#888888"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp" />

                        <!-- Ligne de séparation -->
                        <View
                            android:layout_width="80dp"
                            android:layout_height="3dp"
                            android:background="#E0E0E0"
                            android:layout_marginVertical="16dp" />

                        <!-- Statistiques utilisateur -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="16dp">

                            <!-- Transactions -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    app:cardCornerRadius="24dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp"
                                    app:cardBackgroundColor="#E6EEF8">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_transaction"
                                        android:tint="#4285F4"/>
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#4285F4"
                                    android:layout_marginTop="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Transactions"
                                    android:textSize="12sp"
                                    android:textColor="#888888" />
                            </LinearLayout>

                            <!-- Projets -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    app:cardCornerRadius="24dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp"
                                    app:cardBackgroundColor="#E6F8EE">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_project"
                                        android:tint="#34A853"/>
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#34A853"
                                    android:layout_marginTop="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Projets"
                                    android:textSize="12sp"
                                    android:textColor="#888888" />
                            </LinearLayout>

                            <!-- Rappels -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    app:cardCornerRadius="24dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp"
                                    app:cardBackgroundColor="#FFF8E0">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_reminder"
                                        android:tint="#FBBC05"/>
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#FBBC05"
                                    android:layout_marginTop="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rappels"
                                    android:textSize="12sp"
                                    android:textColor="#888888" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Boutons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    android:paddingHorizontal="24dp"
                    android:paddingBottom="24dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="16dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E6EEF8">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_information"
                                    android:tint="#4285F4" />
                            </com.google.android.material.card.MaterialCardView>

                            <Button
                                android:id="@+id/personalInfoButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?android:attr/selectableItemBackground"
                                android:text="Informations Personnelles"
                                android:textStyle="bold"
                                android:textAllCaps="false"
                                android:textSize="16sp"
                                android:gravity="start|center_vertical"
                                android:paddingStart="16dp"
                                android:textColor="#333333" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="#BBBBBB" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="16dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E6F8EE">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_edit"
                                    android:tint="#34A853" />
                            </com.google.android.material.card.MaterialCardView>

                            <Button
                                android:id="@+id/editInfoButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?android:attr/selectableItemBackground"
                                android:text="Modifier Information"
                                android:textStyle="bold"
                                android:textAllCaps="false"
                                android:textSize="16sp"
                                android:gravity="start|center_vertical"
                                android:paddingStart="16dp"
                                android:textColor="#333333" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="#BBBBBB" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Bouton de déconnexion -->
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Déconnexion"
                        android:textColor="#EA4335"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_logout"
                        app:iconTint="#EA4335"
                        app:iconGravity="textStart"
                        app:strokeColor="#EA4335"
                        app:strokeWidth="1dp"
                        android:backgroundTint="#FFFFFF"
                        app:cornerRadius="16dp"
                        android:layout_marginTop="24dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Image profil circulaire (placée en dernier pour être au-dessus) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="6dp"
            app:strokeWidth="4dp"
            app:strokeColor="#FFFFFF">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_acount_circulaire" />
        </com.google.android.material.card.MaterialCardView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>