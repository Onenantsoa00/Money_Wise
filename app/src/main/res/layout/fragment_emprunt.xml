<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- App Bar avec titre -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenu principal avec scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="80dp">

            <!-- Carte de résumé -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Résumé des emprunts"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Total emprunté -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp"
                                app:cardBackgroundColor="#FFF0E6">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_money_out"
                                    android:tint="#EA4335"/>
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="400,000 MGA"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#EA4335"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total emprunté"
                                android:textSize="14sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <!-- Nombre d'emprunts -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp"
                                app:cardBackgroundColor="#E6EEF8">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_people"
                                    android:tint="#4285F4"/>
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#4285F4"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Emprunteurs"
                                android:textSize="14sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <!-- Échéance proche -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp"
                                app:cardBackgroundColor="#FFF8E0">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_calendar"
                                    android:tint="#FBBC05"/>
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10/07/2023"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FBBC05"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Prochaine échéance"
                                android:textSize="14sp"
                                android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- En-tête de section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Liste des emprunts"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Filtrer"
                    android:textColor="#4285F4"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_filter"
                    app:iconTint="#4285F4"
                    app:iconGravity="textStart"
                    app:strokeColor="#4285F4"
                    app:strokeWidth="1dp"
                    android:backgroundTint="#FFFFFF"
                    app:cornerRadius="20dp"/>
            </LinearLayout>

            <!-- Carte des emprunts -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- En-tête du tableau -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:overScrollMode="never">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#F0F4F9"
                            android:padding="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Nom"
                                android:textColor="#666666"
                                android:textStyle="bold"
                                android:textSize="14sp"/>

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Contact"
                                android:textColor="#666666"
                                android:textStyle="bold"
                                android:textSize="14sp"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Montant"
                                android:textColor="#666666"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:gravity="end"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Emprunt"
                                android:textColor="#666666"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginStart="16dp"/>

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Remboursement"
                                android:textColor="#666666"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginStart="16dp"/>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Liste des emprunts -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Emprunt 1 -->
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:overScrollMode="never">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:background="@color/white"
                                android:clickable="true">

                                <LinearLayout
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        app:cardCornerRadius="18dp"
                                        app:cardElevation="0dp"
                                        app:strokeWidth="0dp"
                                        app:cardBackgroundColor="#E6EEF8"
                                        android:layout_marginEnd="8dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="JD"
                                            android:textColor="#4285F4"
                                            android:textStyle="bold"
                                            android:textSize="14sp"
                                            android:layout_gravity="center"/>
                                    </com.google.android.material.card.MaterialCardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Jean Dupont"
                                        android:textColor="#333333"
                                        android:textSize="14sp"
                                        android:ellipsize="end"
                                        android:maxLines="1"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="034 12 345 67"
                                    android:textColor="#666666"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="250,000 MGA"
                                    android:textColor="#EA4335"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:gravity="end"/>

                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="16dp">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_calendar"
                                        android:tint="#666666"
                                        android:layout_marginEnd="4dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10/06/2023"
                                        android:textColor="#666666"
                                        android:textSize="14sp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="16dp">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_calendar_alert"
                                        android:tint="#FBBC05"
                                        android:layout_marginEnd="4dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10/07/2023"
                                        android:textColor="#FBBC05"
                                        android:textStyle="bold"
                                        android:textSize="14sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </HorizontalScrollView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0"/>

                        <!-- Emprunt 2 -->
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:overScrollMode="never">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:background="@color/white"
                                android:clickable="true">

                                <LinearLayout
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        app:cardCornerRadius="18dp"
                                        app:cardElevation="0dp"
                                        app:strokeWidth="0dp"
                                        app:cardBackgroundColor="#F8E6EE"
                                        android:layout_marginEnd="8dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="MR"
                                            android:textColor="#EA4335"
                                            android:textStyle="bold"
                                            android:textSize="14sp"
                                            android:layout_gravity="center"/>
                                    </com.google.android.material.card.MaterialCardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Marie Rakoto"
                                        android:textColor="#333333"
                                        android:textSize="14sp"
                                        android:ellipsize="end"
                                        android:maxLines="1"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="032 98 765 43"
                                    android:textColor="#666666"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="150,000 MGA"
                                    android:textColor="#EA4335"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:gravity="end"/>

                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="16dp">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_calendar"
                                        android:tint="#666666"
                                        android:layout_marginEnd="4dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="05/06/2023"
                                        android:textColor="#666666"
                                        android:textSize="14sp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="16dp">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_calendar_alert"
                                        android:tint="#FBBC05"
                                        android:layout_marginEnd="4dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="05/07/2023"
                                        android:textColor="#FBBC05"
                                        android:textStyle="bold"
                                        android:textSize="14sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bouton flottant pour ajouter un emprunt -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_add_emprunt"
        android:contentDescription="Ajouter un emprunt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Nouvel emprunt"
        android:textColor="@android:color/white"
        app:icon="@drawable/ic_add"
        app:iconTint="@android:color/white"
        app:backgroundTint="#4285F4"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>