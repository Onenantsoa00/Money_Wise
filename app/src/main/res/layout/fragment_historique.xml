<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- App Bar avec titre et bouton de filtre -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenu principal avec scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="80dp">

            <!-- Carte de résumé -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Résumé des transactions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Entrées -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp"
                                app:cardBackgroundColor="#E6F8EE">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_arrow_down"
                                    android:tint="#34A853"/>
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/textCredit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+500,000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#34A853"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Crédit"
                                android:textSize="14sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <!-- Sorties -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp"
                                app:cardBackgroundColor="#FFF0E6">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_arrow_up"
                                    android:tint="#EA4335"/>
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/textDebit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-150,000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#EA4335"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Débit"
                                android:textSize="14sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <!-- Solde -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp"
                                app:cardBackgroundColor="#E6EEF8">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_balance"
                                    android:tint="#4285F4"/>
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/textSolde"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+350,000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#4285F4"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Solde"
                                android:textSize="14sp"
                                android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- En-tête de section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Historique des transactions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Filtrer"
                    android:textColor="#4285F4"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_filter"
                    app:iconTint="#4285F4"
                    app:iconGravity="textStart"
                    app:strokeColor="#4285F4"
                    app:strokeWidth="1dp"
                    android:backgroundTint="#FFFFFF"
                    app:cornerRadius="20dp"/>
            </LinearLayout>

            <!-- Carte des transactions -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- En-tête du tableau -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0F4F9"
                        android:padding="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Type"
                            android:textColor="#666666"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Montant"
                            android:textColor="#666666"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:gravity="end"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Date"
                            android:textColor="#666666"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Motif"
                            android:textColor="#666666"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerHistorique"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingBottom="16dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bouton flottant pour remonter en haut -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_scroll_top"
        android:contentDescription="Remonter en haut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_fleche"
        app:backgroundTint="#4285F4"
        app:tint="@android:color/white"
        app:borderWidth="0dp"
        app:elevation="6dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>