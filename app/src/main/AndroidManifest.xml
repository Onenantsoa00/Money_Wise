<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions pour accÃ©der aux images et Ã  la camÃ©ra -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />

    <!-- Permissions pour l'accÃ¨s internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permissions pour SMS -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <!-- ðŸ”¥ PERMISSION POUR LE WIDGET FLOTTANT -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- ðŸ”¥ PERMISSIONS POUR LES SERVICES EN ARRIÃˆRE-PLAN -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <!-- ðŸ”¥ PERMISSION POUR LES NOTIFICATIONS (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- ðŸ”¥ Permission pour redÃ©marrer automatiquement le service -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- ðŸ”¥ PERMISSIONS POUR LES ALARMES EXACTES (Android 12+) -->
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!-- DÃ©claration que l'appareil photo n'est pas obligatoire -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:name=".MoneyWiseApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyWise"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31">

        <!-- ActivitÃ© de dÃ©marrage (Splash) -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MoneyWise.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ActivitÃ© de connexion -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.MoneyWise.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- ActivitÃ© d'inscription -->
        <activity
            android:name=".ui.auth.SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.MoneyWise.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".ui.auth.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.auth.LoginActivity" />
        </activity>

        <!-- ActivitÃ© principale -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.MoneyWise.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTop" />

        <!-- ðŸ”¥ SERVICE POUR LE WIDGET FLOTTANT -->
        <service
            android:name=".services.FloatingBalanceService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Widget flottant pour affichage du solde" />
        </service>

        <!-- ðŸ”¥ NOUVEAU: SERVICE POUR LES RAPPELS -->
        <service
            android:name=".services.ReminderNotificationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Service de rappel pour emprunts, acquittements et projets" />
        </service>

        <!-- Provider pour partager des fichiers -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- ðŸ”¥ RECEIVER POUR LE REDÃ‰MARRAGE AUTOMATIQUE (SANS @AndroidEntryPoint) -->
        <receiver
            android:name=".services.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:directBootAware="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- RECEIVER SMS PRINCIPAL -->
        <receiver
            android:name=".services.SmsListener"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>